// Configure ConnectionString and JWT settings from appsettings.json
// In .NET 8, user secrets are loaded automatically in development. 
// No code changes are needed if you use the default CreateBuilder: var builder = WebApplication.CreateBuilder(args);
// so no need to add them explicitly.
// Example to generate secret keys, goto Visual Studio > View > Terminal, run the following command to create JwtSettings:Key value:
// cd BookStoreApp.API
// dotnet user-secrets init // This will create a <UserSecretsId> in the .csproj file.
// dotnet user-secrets set "JwtSettings:Key" "your_user_secrets_key"
// dotnet user-secrets set "ConnectionStrings:BookStoreAppDbConnection" "your_database_connection_string"
// The values are stored in a JSON file in the local machine's user profile folder: %APPDATA%\Microsoft\UserSecrets\<UserSecretsId>\secrets.json
// If you want to use user secrets in production, you can add them manually.
// builder.Configuration.AddUserSecrets<Program>();
// refer https://learn.microsoft.com/en-us/aspnet/core/security/app-secrets?view=aspnetcore-9.0&tabs=windows

{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "https://localhost:5341" }
      }

    ]
  },
  "JwtSettings": {
    "Issuer": "BookStoreAPI",
    "Audience": "BookStoreApiClient",
    "Duration": 1 //In hours
  },
  "AllowedHosts": "*"
}
